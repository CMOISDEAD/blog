---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ArrowLeft } from 'lucide-react';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="h-screen bg-stone-50 dark:bg-stone-900  text-stone-500 dark:text-stone-400">
		<Header />
		<main class="flex items-center my-20 justify-center min-h-screen bg-stone-50 dark:bg-stone-900">
      <div class="text-center">
        <h1 class="font-serif text-2xl font-bold text-stone-900 dark:text-stone-50 mb-4">
          Page Not Found
        </h1>
        <p class="text-stone-500 dark:text-stone-400 mb-6">
          The page you&apos;re looking for doesn&apos;t exist.
        </p>
        <a
          href="/"
          class="inline-flex items-center text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-300"
        >
          <ArrowLeft size={16} class="mr-2" />
          Back to Home
        </a>
      </div>
    </main>
		<Footer />
	</body>
</html>
